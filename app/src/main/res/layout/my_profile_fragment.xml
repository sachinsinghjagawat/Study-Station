<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".myProfile.MyProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">


        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_gravity="center_horizontal"
            android:elevation="8dp"
            app:cardCornerRadius="75dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/profilePhoto2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/app_icon" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="8dp"
                android:text="Name" />

            <TextView
                android:id="@+id/editTextName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="name"
                android:padding="8dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/textEmail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E-mail"
                android:padding="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/departmentTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="department"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Section"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/sectionTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="section"/>

        </LinearLayout>

        <Button
            android:id="@+id/chengeProfileButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_account_circle"
            android:background="@drawable/edit_round"
            android:paddingStart="8dp"
            android:drawablePadding="13dp"
            android:paddingEnd="15dp"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:text="Change Profile"
            android:layout_gravity="center_horizontal"
            android:onClick="changeProfile"/>

        <Button
            android:id="@+id/signOutButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/googleg_standard_color_18"
            android:drawablePadding="20dp"
            android:onClick="signOut"
            android:paddingHorizontal="25dp"
            android:text="Sign Out"
            android:textAllCaps="false"
            android:textSize="17sp" />


    </LinearLayout>
</FrameLayout>