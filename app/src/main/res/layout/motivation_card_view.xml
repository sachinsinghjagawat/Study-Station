<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="8dp"
        android:padding="4dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="61dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/motivationImage"
                    android:layout_width="match_parent"
                    android:layout_height="375dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/app_icon" />

                <ImageView
                    android:id="@+id/imagePopUp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:alpha="0"
                    app:srcCompat = "@drawable/insta_animation" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <TextView
                    android:id="@+id/likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:text="0"
                    android:textColor="#515151"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/likeImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/love_heart_outline"
                    android:tag="outline" />

                <TextView
                    android:id="@+id/linkText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:padding="8dp"
                    android:text="@string/more"
                    android:textColor="#673AB7"
                    android:textSize="23sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <TextView
                android:id="@+id/motivationContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/motivation_quote_icon"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="text"
                android:textColor="#191919"
                android:textSize="18dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>